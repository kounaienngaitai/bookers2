

<% if @book_new.errors.any? %>
  <%= @book_new.errors.count %>件のエラーが発生しました
  <ul>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!----------------ユーザー投稿一覧--------------->
<%= render 'users/info',　user: @user %>
<%= render 'users/newbook', book: @book_new %>
</div>
<div class="col-md-8" offset-md-1>
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag @user.get_profile_image(100, 100) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
            </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

